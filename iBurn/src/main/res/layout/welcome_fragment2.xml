<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_fragment2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:paddingTop="32dp" >

    <!-- Welcome 2 : A note on location data -->

    <TextView
        android:id="@+id/heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/welcome_text_margin"
        android:layout_marginRight="@dimen/welcome_text_margin"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/location_notice_title"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_marginLeft="@dimen/welcome_text_margin"
        android:layout_marginRight="@dimen/welcome_text_margin"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/location_data_notice"
        android:textAppearance="@style/WelcomeContentAppearance" />

    <FrameLayout
        android:id="@+id/images"
        android:layout_width="@dimen/welcome_images_size"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/parallax0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:scaleType="centerInside"
            android:src="@drawable/map_pin_pixelated" />

        <TextView
            android:id="@+id/parallax1"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:rotation="-10"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"
            android:background="#ff000000"
            android:textColor="#FFFFFFFF"
            android:text="CENSORED"/>
    </FrameLayout>

</RelativeLayout>