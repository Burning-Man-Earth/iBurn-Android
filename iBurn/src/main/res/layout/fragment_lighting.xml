<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/lightModeGrid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="8">

        <Button
            android:id="@+id/presetBtn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/presetBtn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/presetBtn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/presetBtn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/presetBtn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/presetBtn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/presetBtn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/presetBtn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip">

        <TableRow style="@style/GjLightTableRow">

            <TextView
                style="@style/GjLightSliderLabel"
                android:text="Brightness" />

            <SeekBar
                android:id="@+id/lightBrightness"
                style="@style/GjLightSlider"
                android:layout_marginRight="32dp"
                android:progress="30" />

            <TextView
                style="@style/GjLightSliderLabel"
                android:text="Hue" />

            <SeekBar
                android:id="@+id/lightHue"
                style="@style/GjLightSlider"
                android:progress="40" />

        </TableRow>

        <TableRow style="@style/GjLightTableRow">

            <TextView
                style="@style/GjLightSliderLabel"
                android:text="Speed" />

            <SeekBar
                android:id="@+id/lightSpeed"
                style="@style/GjLightSlider"
                android:layout_marginRight="32dp"
                android:progress="50" />

<!--
            <TextView
                style="@style/GjLightSliderLabel"
                android:text="Density" />

            <SeekBar
                android:id="@+id/lightDensity"
                style="@style/GjLightSlider"
                android:progress="60" />
-->
        </TableRow>

        <TableRow style="@style/GjLightTableRow">
<!--
            <TextView
                style="@style/GjLightSliderLabel"
                android:text="Mod1" />

            <SeekBar
                android:id="@+id/lightMod1"
                style="@style/GjLightSlider"
                android:layout_marginRight="32dp"
                android:progress="60" />

            <TextView
                style="@style/GjLightSliderLabel"
                android:text="Mod2" />

            <SeekBar
                android:id="@+id/lightMod2"
                style="@style/GjLightSlider"
                android:progress="60" />
                -->
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/control_loss_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/control_loss_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="30sp"
            android:text="@string/another_car_has_taken_lighting_control"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="This Car can resume control once cars with higher control priority are out of range."/>

    </LinearLayout>


</LinearLayout>
